@using WebApplication1.ViewModels
@model List<UserViewModel>

<h1>Whatever</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
@{
    var userHeaderMetadata = Model.First();
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => userHeaderMetadata.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => userHeaderMetadata.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => userHeaderMetadata.GroupName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GroupName)
            </td>
            <td>
                <a asp-action="Update" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
